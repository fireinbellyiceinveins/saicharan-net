{
  "builds": [
    {
      "src": "remix.config.js",
      "use": "@remix-run/vercel",
      "config": { "includeFiles": ["content/**"] }
    }
  ],
  "routes": [
    {
      "src": "/build/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": ".vercel/server/app"
    }
  ]
} 